@model Loja.Models.Cliente
@{
    ViewData["Title"] = "Login";
}

<main role="main">
    <br />
    <br />
    <section class="container">
        <aside class="col-sm-4">
            <div id="code_login_1">
                <div class="card">
                    <article class="card-body">
                        @if (ViewData["MSG_E"] != null)
                        {
                            <p class="alert alert-danger text-center">@Html.Raw(ViewData["MSG_E"])</p>
                        }
                        <a asp-controller="Home" asp-action="CadastroCliente" class="float-right btn btn-outline-primary">Cadastre-se</a>
                        <h4 class="card-title mb-4 mt-1">Login</h4>
                        <form method="post">

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" asp-for="Email" >
                            </div>

                            <div class="form-group">
                                <a class="float-right" href="#">Esqueceu?</a>
                                <label asp-for="Senha"></label>
                                <input class="form-control" asp-for="Senha">
                            </div> 

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Acessar </button>
                            </div>
                        </form>
                    </article>
                </div>
            </div>
        </aside>
    </section>
</main>